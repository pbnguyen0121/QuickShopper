<% layout = "main" %>
<div class="container my-5">
  <h2 class="mb-4">Your Shopping Cart</h2>

  <% if (cart && cart.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Line Total</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% let subtotal = 0; %>
          <% cart.forEach(item => { %>
            <% let price = item.product.salePrice ? item.product.salePrice : item.product.price; %>
            <% let lineTotal = price * item.qty; %>
            <% subtotal += lineTotal; %>
            <tr>
              <td>
                <img src="/images/<%= item.product.imageUrl %>" alt="<%= item.product.title %>" style="max-width:80px;">
              </td>
              <td><%= item.product.title %></td>
              <td>$<%= price.toFixed(2) %></td>
              <td>
                <form action="/cart/update/<%= item.product._id %>" method="POST" class="d-inline">
                  <input type="number" name="qty" value="<%= item.qty %>" min="1" class="form-control form-control-sm d-inline-block" style="width:60px;">
                  <button type="submit" class="btn btn-sm btn-primary ms-2">Update</button>
                </form>
              </td>
              <td>$<%= lineTotal.toFixed(2) %></td>
              <td>
                <form action="/cart/remove/<%= item.product._id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    
    <% let tax = subtotal * 0.10; %>
    <% let grandTotal = subtotal + tax; %>
    <div class="mt-4">
      <h5>Subtotal: $<%= subtotal.toFixed(2) %></h5>
      <h5>Tax (10%): $<%= tax.toFixed(2) %></h5>
      <h5>Grand Total: $<%= grandTotal.toFixed(2) %></h5>
    </div>
    
    <div class="mt-4 text-end">
      <form action="/cart/checkout" method="POST">
        <button type="submit" class="btn btn-success">Place Order</button>
      </form>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center">
      Your shopping cart is empty.
    </div>
  <% } %>
</div>
