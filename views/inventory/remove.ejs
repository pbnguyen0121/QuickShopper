<% layout = "main" %>
<div class="container my-5">
  <div class="card">
    <div class="card-header bg-danger text-white">
      <h3 class="mb-0">Delete Product</h3>
    </div>
    <div class="card-body">
      <p>Are you sure you want to delete the product "<strong><%= product.title %></strong>"?</p>
      <div class="d-flex justify-content-end">
        <form action="/inventory/remove/<%= product._id %>" method="POST" class="me-2">
          <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </form>
        <a href="/inventory/list" class="btn btn-secondary">Cancel</a>
      </div>
    </div>
  </div>
</div>
