<% layout = "main" %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Inventory Management</h2>
    <a href="/inventory/add" class="btn btn-primary">Add New Product</a>
  </div>

  <% if (products && products.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>Featured</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.title %></td>
              <td><%= product.category %></td>
              <td>$<%= product.price.toFixed(2) %></td>
              <td>
                <% if (product.featured) { %>
                  <span class="badge badge-success">Yes</span>
                <% } else { %>
                  <span class="badge badge-secondary">No</span>
                <% } %>
              </td>
              <td>
                <a href="/inventory/edit/<%= product._id %>" class="btn btn-sm btn-warning">Edit</a>
                <a href="/inventory/remove/<%= product._id %>" class="btn btn-sm btn-danger">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-info" role="alert">
      No products available.
    </div>
  <% } %>

  <!-- Optional: Link to load data if needed -->
  <div class="mt-3">
    <a href="/load-data/products" class="btn btn-secondary">Load Data</a>
  </div>
</div>
